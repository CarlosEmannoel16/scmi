{{>partials/header}}
<div class="column columnAll">

  <div class="ui two column centered grid">
    <div class="row rowTitleAddProducts">
      rfrf
    </div>
    <div class="teen column centered row ">
      <div class="row ">
        <h1>Cadastro de Produtos</h1>
      </div>
      <div class="ui divider"></div>

      <div class="column shadow-all">
        <form class="ui form  form-add-product" action="/new-customer" method="post">
          <div class="three fields">
            <div class="field">
              <label>Primeiro Nome</label>
              <input type="text"  name="first_name" placeholder="Primeiro nome">
            </div>
            <div class="field">
              <label>Ultimo Nome</label>
              <input type="text" name="last_name" placeholder="Ultimo Nome">
            </div>
            <div class="field">
              <label>Apelido</label>
              <input type="text" name="last_name" placeholder="Ultimo Nome">
            </div>
          </div>
          <div class="two fields">
            <div class="field">
              <label>Telefone</label>
              <input type="text" name="phone" placeholder="(88)999999999">
            </div>
            <div class="field">
              <label>Email</label>
              <input type="text" name="email" placeholder="pessoa@email.com">
            </div>
          </div>
          <div class="three fields">
            <div class="field">
              <label>Rua</label>
              <input type="text" name="street" placeholder="Rua">
            </div>
            <div class="field">
              <label>Bairro</label>
              <input type="text" name="district" placeholder="Bairro">
            </div>
            <div class="field">
              <label>Cidade</label>
              <input type="text" name="city" placeholder="Cidade">
            </div>
            <div class="field">
              <label>Número</label>
              <input type="text" name="number" placeholder="Número">
            </div>
          </div>
        
          <button class="ui button" type="submit">Cadastrar</button>
          <button id="btnReturnAllProducts" class="ui secondary basic button ">Ver produtos</button>
        </form>
       
      </div>

    </div>
  </div>
</div>

