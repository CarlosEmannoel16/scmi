{{>partials/header}}
<div class="ui grid grid-all-add-products">
  <!--linhha superior-->
  <div class="row row-top-bottom-products-add"></div>
  <!--coluna lateral esquerda-->
  <div class="two wide column"></div>
  <!--coluna central-->
  <div class="twelve wide column shadow-all border-radius">

    <form action="/new-customer" method="post">
      <div class="ui form">
        <h1>Cadastro de cliente</h1>
        <div class="ui divider"></div>
        <h4 class="ui dividing header">Informação pessoais</h4>
        <div class="three fields">
          <div class="field">
            <label>Primeiro Nome</label>
            <input type="text"  name="first_name" placeholder="Primeiro nome">
          </div>
          <div class="field">
            <label>Ultimo Nome</label>
            <input type="text" name="last_name" placeholder="Ultimo Nome">
          </div>
          <div class="field">
            <label>Apelido</label>
            <input type="text" name="last_name" placeholder="Ultimo Nome">
          </div>
        </div>
        <h4 class="ui dividing header">Informação de endereço</h4>
        <div class="three fields">
          <div class="field">
            <label>Rua</label>
            <input type="text" name="street" placeholder="Rua">
          </div>
          <div class="field">
            <label>Bairro</label>
            <input type="text" name="district" placeholder="Bairro">
          </div>
          <div class="field">
            <label>Cidade</label>
            <input type="text" name="city" placeholder="Cidade">
          </div>
          <div class="field">
            <label>Número</label>
            <input type="text" name="number" placeholder="Número">
          </div>
        </div>
        <h4 class="ui dividing header">Informação para contato</h4>
        <div class="two fields">
          <div class="field">
            <label>Telefone</label>
            <input type="text" name="phone" placeholder="(88)999999999">
          </div>
          <div class="field">
            <label>Email</label>
            <input type="text" name="email" placeholder="pessoa@email.com">
          </div>
        </div>
        <button class="ui button" type="submit">Cadastrar</button>
      </div>
    </form>
  </div>
  <div class="two wide column"></div>
  <!--coluna lateral direira-->
  <div class="row row-top-bottom-products-add"></div>
  <!--linhha inferior-->
</div>



{{>partials/footer}}